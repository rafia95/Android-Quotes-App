<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/content_quote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafia.qdmraquoteapp.QuoteActivity"
    tools:showIn="@layout/activity_quote"
    android:gravity="left"
    android:background="#2D3A3A">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:gravity="left"
            android:text="@string/category"
            android:textColor="#9EA3B0"
            android:textSize="24dp"

            />

        <TextView
            android:id="@+id/cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#9EA3B0"
            android:textSize="24dp"

            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:gravity="left"
            android:onClick="onAttributed"
            android:text="@string/attribute"
            android:textColor="#9EA3B0"
            android:textSize="24dp"
            android:paddingTop="@dimen/paddingTop"
            />

        <TextView
            android:id="@+id/att"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAttributed"
            android:layout_margin="5dp"
            android:textColor="#9EA3B0"
            android:textSize="24dp"
            android:paddingTop="@dimen/paddingTop"

            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:gravity="left"
            android:text="@string/quote"
            android:textColor="#9EA3B0"
            android:textSize="20dp"
            android:paddingTop="@dimen/paddingTop"

            />

        <TextView
            android:id="@+id/quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#9EA3B0"
            android:textSize="20dp"
            android:paddingTop="@dimen/paddingTop"

            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:gravity="left"
            android:text="@string/date"
            android:textColor="#9EA3B0"
            android:textSize="24dp"
            android:paddingTop="@dimen/paddingTop"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#9EA3B0"
            android:textSize="24dp"
            android:paddingTop="@dimen/paddingTop"

            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:gravity="left"
            android:onClick="onRef"
            android:text="@string/ref"
            android:textColor="#9EA3B0"
            android:textSize="24dp"
            android:paddingTop="@dimen/paddingTop"

            />

        <TextView
            android:id="@+id/ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRef"
            android:layout_margin="5dp"
            android:textColor="#9EA3B0"
            android:textSize="24dp"
            android:paddingTop="@dimen/paddingTop"

            />

    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dismiss"
        android:onClick="onDismiss"/>


</LinearLayout>